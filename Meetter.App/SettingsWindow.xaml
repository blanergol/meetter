<Window x:Class="Meetter.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="Аккаунты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListView Name="AccountsList">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Провайдер" Width="120" DisplayMemberBinding="{Binding ProviderId}"/>
                                <GridViewColumn Header="Email" Width="240" DisplayMemberBinding="{Binding Email}"/>
                                <GridViewColumn Header="Имя" Width="160" DisplayMemberBinding="{Binding DisplayName}"/>
                                <GridViewColumn Header="Включен" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Enabled}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Добавить Google аккаунт" Click="OnAddGoogleAccount" Margin="0,0,10,0"/>
                        <Button Content="Удалить" Click="OnRemoveAccount"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Общие">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Дней показывать:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Name="DaysCombo" Width="120">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="120" Click="OnSave"/>
            <Button Content="Отмена" Width="120" Margin="10,0,0,0" Click="OnCancel"/>
        </StackPanel>
    </Grid>
</Window>

