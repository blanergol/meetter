<Window x:Class="Meetter.App.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе" Height="260" Width="480">
    <StackPanel Margin="20">
        <TextBlock Text="Meetter" FontSize="22" FontWeight="Bold"/>
        <TextBlock Margin="0,10,0,0" Text="Версия 0.1"/>
        <TextBlock Margin="0,10,0,0" Text="Разработчик: Ваше имя"/>
        <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">
            Приложение агрегирует встречи из календарей и показывает ссылки на подключения.
        </TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="ОК" Width="100" IsDefault="True" Click="OnOk"/>
        </StackPanel>
    </StackPanel>
</Window>

